<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sylius_mollie.form.type.mollie_gateway_config.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>
        <parameter key="sylius_mollie.form.type.payment_methods.payment_surcharge_fee.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>
        <parameter key="sylius_mollie.form.type.partial_shipment.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>
        <parameter key="sylius_mollie.form.type.mollie.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="sylius_mollie.form.type.mollie_gateway_configuration" class="Sylius\MolliePlugin\Form\Type\MollieGatewayConfigurationType">
            <argument type="service" id="sylius_mollie.mollie_api_client"/>
            <tag name="sylius.gateway_configuration_type" type="mollie" label="sylius_mollie_plugin.ui.mollie_gateway_label"/>
            <tag name="form.type"/>
        </service>

        <service id="sylius_mollie.form.type.mollie_subscription_gateway_configuration" class="Sylius\MolliePlugin\Form\Type\MollieSubscriptionGatewayConfigurationType">
            <tag name="sylius.gateway_configuration_type" type="mollie_subscription" label="sylius_mollie_plugin.ui.mollie_subscription_gateway_label"/>
            <tag name="form.type"/>
        </service>

        <service id="sylius_mollie.form.type.direct_debit" class="Sylius\MolliePlugin\Form\Type\DirectDebitType">
            <argument type="service" id="request_stack"/>
            <tag name="form.type"/>
        </service>

        <service id="sylius_mollie.form.extension.type.complete" class="Sylius\MolliePlugin\Form\Extension\CompleteTypeExtension">
            <tag name="form.type_extension" extended_type="Sylius\Bundle\CoreBundle\Form\Type\Checkout\CompleteType"/>
        </service>

        <service id="sylius_mollie.form.extension.type.product_variant_recurring" class="Sylius\MolliePlugin\Form\Extension\ProductVariantRecurringExtension">
            <argument type="service" id="sylius_mollie.provider.form.resolver_group"/>
            <tag name="form.type_extension" extended_type="Sylius\Bundle\ProductBundle\Form\Type\ProductVariantType"/>
        </service>

        <service id="sylius_mollie.form.extension.type.payment" class="Sylius\MolliePlugin\Form\Extension\PaymentTypeExtension">
            <tag name="form.type_extension" extended_type="Sylius\Bundle\CoreBundle\Form\Type\Checkout\PaymentType"/>
        </service>

        <service id="sylius_mollie.form.type.mollie_payment" class="Sylius\MolliePlugin\Form\Type\PaymentMollieType">
            <argument type="service" id="sylius_mollie.resolver.payment_methods"/>
            <tag name="form.type"/>
        </service>

        <service id="sylius_mollie.form.transformer.mollie_interval" class="Sylius\MolliePlugin\Form\Transformer\MollieIntervalTransformer"/>

        <service id="sylius_mollie.form.type.mollie_interval" class="Sylius\MolliePlugin\Form\Type\MollieIntervalType">
            <argument type="service" id="sylius_mollie.form.transformer.mollie_interval"/>
            <tag name="form.type"/>
        </service>

        <service id="sylius_mollie.form.extension.payment_method_type" class="Sylius\MolliePlugin\Form\Extension\GatewayConfigTypeExtension">
            <tag name="form.type_extension" extended_type="Sylius\Bundle\PayumBundle\Form\Type\GatewayConfigType"/>
        </service>

        <service id="sylius_mollie.form.extension.mollie_gateway_config" class="Sylius\MolliePlugin\Form\Type\MollieGatewayConfigType">
            <argument>%sylius_mollie.model.mollie_gateway_config.class%</argument>
            <argument>%sylius_locale.locale%</argument>
            <argument>%sylius_mollie.form.type.mollie_gateway_config.validation_groups%</argument>
            <tag name="form.type"/>
        </service>

        <service id="sylius_mollie.form.type.payment_surcharge_fee" class="Sylius\MolliePlugin\Form\Type\PaymentSurchargeFeeType">
            <argument>%sylius_mollie.model.payment_surcharge_fee.class%</argument>
            <argument>%sylius_mollie.form.type.payment_methods.payment_surcharge_fee.validation_groups%</argument>
            <tag name="form.type"/>
        </service>

        <service id="sylius_mollie.form.type.customize_method_image" class="Sylius\MolliePlugin\Form\Type\CustomizeMethodImageType">
            <argument>%sylius_mollie.model.mollie_method_image.class%</argument>
            <tag name="form.type"/>
        </service>

        <service id="sylius_mollie.grid.filter.mollie_logger_level" class="Sylius\MolliePlugin\Grid\Filter\MollieLoggerLevel">
            <tag name="sylius.grid_filter" type="log_level" form_type="Sylius\MolliePlugin\Form\Type\MollieLoggerLevelFilterType" />
        </service>

        <service id="sylius_mollie.grid.filter.mollie_subscription_state" class="Sylius\MolliePlugin\Grid\Filter\MollieSubscriptionState">
            <tag name="sylius.grid_filter" type="subscription_state" form_type="Sylius\MolliePlugin\Form\Type\MollieSubscriptionStateGridFilterType" />
        </service>

        <service id="sylius_mollie.form.type.partial_ship.partial_ship" class="Sylius\MolliePlugin\Form\Type\PartialShip\PartialShipType">
            <argument>%sylius.model.shipment.class%</argument>
            <argument>%sylius_mollie.form.type.partial_shipment.validation_groups%</argument>
            <tag name="form.type" />
        </service>

        <service id="sylius_mollie.form.extension.product_type" class="Sylius\MolliePlugin\Form\Extension\ProductTypeExtension">
            <tag name="form.type_extension" extended_type="Sylius\Bundle\ProductBundle\Form\Type\ProductType"/>
        </service>

        <service id="sylius_mollie.form.type.product_type" class="Sylius\MolliePlugin\Form\Type\ProductTypeType">
            <argument>%sylius_mollie.model.product_type.class%</argument>
            <argument>%sylius_mollie.form.type.mollie.validation_groups%</argument>
            <tag name="form.type" />
        </service>

        <service id="sylius_mollie.form.type.translation.block_translation" class="Sylius\MolliePlugin\Form\Type\Translation\TemplateMollieEmailTranslationType">
            <argument>%sylius_mollie.model.template_mollie_email_translation.class%</argument>
            <tag name="form.type" />
        </service>

        <service id="sylius_mollie.form.type.translation.payment_method_translation" class="Sylius\MolliePlugin\Form\Type\Translation\MollieGatewayConfigTranslationType">
            <argument>%sylius_mollie.model.mollie_gateway_config_translation.class%</argument>
            <tag name="form.type" />
        </service>
    </services>
</container>
