<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_mollie.order.order_payment_refund" class="Sylius\MolliePlugin\Order\OrderPaymentRefund">
            <argument type="service" id="sylius.repository.order"/>
            <argument type="service" id="sylius_mollie.logger.mollie_logger_action"/>
            <argument type="service" id="payum"/>
            <argument type="service" id="Sylius\RefundPlugin\Filter\UnitRefundFilterInterface"/>
        </service>

        <service id="sylius_mollie.order.order_item_cloner" class="Sylius\MolliePlugin\Order\OrderItemCloner">
            <argument type="service" id="sylius.factory.order_item"/>
            <argument type="service" id="sylius.factory.order_item_unit"/>
        </service>

        <service id="sylius_mollie.order.adjustment_cloner" class="Sylius\MolliePlugin\Order\AdjustmentCloner">
            <argument type="service" id="sylius.factory.adjustment"/>
        </service>

        <service id="sylius_mollie.order.shipment_cloner" class="Sylius\MolliePlugin\Order\ShipmentCloner">
            <argument type="service" id="sylius.factory.shipment"/>
            <argument type="service" id="sylius_mollie.order.shipment_unit_cloner"/>
        </service>

        <service id="sylius_mollie.order.shipment_unit_cloner" class="Sylius\MolliePlugin\Order\ShipmentUnitCloner">
            <argument type="service" id="sylius.factory.shipment_unit"/>
        </service>

        <service id="sylius_mollie.order.subscription_order_cloner" class="Sylius\MolliePlugin\Order\SubscriptionOrderCloner">
            <argument type="service" id="sylius_mollie.order.order_item_cloner"/>
            <argument type="service" id="sylius.factory.order"/>
            <argument type="service" id="sylius.random_generator"/>
            <argument type="service" id="sylius_mollie.order.adjustment_cloner"/>
            <argument type="service" id="sylius_mollie.order.shipment_cloner"/>
        </service>
    </services>
</container>
