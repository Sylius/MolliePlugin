<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.partial_ship.resolver.from_sylius_to_mollie_lines" class="Sylius\MolliePlugin\PartialShip\Resolver\FromSyliusToMollieLinesResolver" />
        <service id="Sylius\MolliePlugin\PartialShip\Resolver\FromSyliusToMollieLinesResolverInterface" alias="sylius_mollie.partial_ship.resolver.from_sylius_to_mollie_lines" />

        <service id="sylius_mollie.partial_ship.resolver.from_mollie_to_sylius" class="Sylius\MolliePlugin\PartialShip\Resolver\FromMollieToSyliusResolver">
            <argument type="service" id="sylius.repository.order_item_unit"/>
            <argument type="service" id="sylius_mollie.partial_ship.remover.old_shipment_items"/>
        </service>
        <service id="Sylius\MolliePlugin\PartialShip\Resolver\FromMollieToSyliusResolverInterface" alias="sylius_mollie.partial_ship.resolver.from_mollie_to_sylius" />
    </services>
</container>
