<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="sylius_mollie.helper.int_to_string" class="Sylius\MolliePlugin\Converter\IntToStringConverter">
            <argument type="service" id="sylius_mollie.provider.divisor"/>
        </service>
        <service id="Sylius\MolliePlugin\Converter\IntToStringConverterInterface" alias="sylius_mollie.helper.int_to_string" />

        <service id="sylius_mollie.helper.convert_order" class="Sylius\MolliePlugin\Converter\OrderConverter">
            <argument type="service" id="sylius_mollie.helper.int_to_string"/>
            <argument type="service" id="sylius_mollie.calculator.calculate_tax_amount"/>
            <argument type="service" id="sylius_mollie.resolver.meal_voucher"/>
            <argument type="service" id="sylius.tax_rate_resolver"/>
            <argument type="service" id="sylius.zone_matcher"/>
            <argument type="service" id="request_stack"/>
        </service>
        <service id="Sylius\MolliePlugin\Converter\OrderConverterInterface" alias="sylius_mollie.helper.convert_order" />

        <service id="sylius_mollie.helper.convert_price_to_amount" class="Sylius\MolliePlugin\Converter\PriceToAmountConverter">
            <argument type="service" id="sylius.context.currency"/>
            <argument type="service" id="sylius.context.locale"/>
            <argument type="service" id="sylius.templating.helper.format_money"/>
        </service>
        <service id="Sylius\MolliePlugin\Converter\PriceToAmountConverterInterface" alias="sylius_mollie.helper.convert_price_to_amount" />

        <service id="sylius_mollie.helper.convert_refund_data" class="Sylius\MolliePlugin\Refund\Converter\RefundDataConverter">
            <argument type="service" id="sylius_mollie.helper.int_to_string"/>
        </service>
        <service id="Sylius\MolliePlugin\Refund\Converter\RefundDataConverterInterface" alias="sylius_mollie.helper.convert_refund_data" />

        <service id="sylius_mollie.helper.payment_description" class="Sylius\MolliePlugin\Provider\PaymentDescriptionProvider">
            <argument type="service" id="sylius.payment_description_provider"/>
        </service>
        <service id="Sylius\MolliePlugin\Provider\PaymentDescriptionProviderInterface" alias="sylius_mollie.helper.payment_description" />
    </services>
</container>
